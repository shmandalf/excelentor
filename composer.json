{
    "name": "shmandalf/excelentor",
    "description": "A wizard-grade PHP library that turns boring spreadsheets into elegant PHP objects. Cast spells on Excel/CSV files to automatically parse, map, and hydrate data into strongly-typed object collections.",
    "type": "library",
    "keywords": [
        "excel",
        "csv",
        "spreadsheet",
        "parser",
        "import",
        "export",
        "mapper",
        "hydration",
        "dto",
        "validation",
        "annotations",
        "attributes",
        "php8",
        "strongly-typed",
        "data-transfer-object"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry Shmanatov",
            "email": "dshmanatov@gmail.com",
            "homepage": "https://github.com/shmandalf"
        }
    ],
    "require": {
        "php": "^8.1",
        "nesbot/carbon": "^2.67",
        "illuminate/validation": "^9.0|^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "3.91.*",
        "symfony/console": "6.4.*",
        "symfony/event-dispatcher": "6.4.*",
        "symfony/filesystem": "6.4.*",
        "symfony/options-resolver": "6.4.*",
        "symfony/process": "6.4.*",
        "symfony/stopwatch": "6.4.*",
        "symfony/string": "6.4.*"
    },
    "suggest": {
        "illuminate/translation": "Required for localization of validation messages",
        "phpoffice/phpspreadsheet": "To read Excel files",
        "league/csv": "To read CSV files"
    },
    "autoload": {
        "psr-4": {
            "Shmandalf\\Excelentor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shmandalf\\Excelentor\\Tests\\": "tests/"
        },
        "files": [
            "tests/Fixtures/CasterConfigTestDTOs.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse src",
        "analyse-tests": "vendor/bin/phpstan analyse tests --level=5",
        "cs-check": "vendor/bin/php-cs-fixer fix --dry-run",
        "cs-fix": "vendor/bin/php-cs-fixer fix"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
